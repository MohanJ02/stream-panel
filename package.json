{
  "private": true,
  "scripts": {
    "prisma": "prisma",
    "postinstall": "prisma generate",
    "dev": "docker compose up -d && pnpm watch && docker compose down",
    "watch": "trap 'exit 0' SIGINT; prisma generate && prisma db push && next dev",
    "build": "prisma generate && next build && npx prisma migrate deploy",
    "start": "next start",
    "dev-mail": "pnpm run dev & pnpm run email --port 3002 --dir lib/emails",
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "lint": "pnpm run lint",
    "typecheck": "tsc --noEmit"
  },
